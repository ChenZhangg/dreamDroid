<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/ButtonHelp"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="30dp"
            android:background="@drawable/button_key_dark"
            android:text="Help"/>

        <Button
            android:id="@+id/Button1"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonHelp"
            android:background="@drawable/button_key_dark"
            android:text="1"/>

        <Button
            android:id="@+id/Button2"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/Button1"
            android:background="@drawable/button_key_dark"
            android:text="2"/>

        <Button
            android:id="@+id/Button3"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/Button2"
            android:background="@drawable/button_key_dark"
            android:text="3"/>

        <Button
            android:id="@+id/ButtonPower"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/Button3"
            android:background="@drawable/button_key_red"
            android:text="PWR"/>

        <Button
            android:id="@+id/Button4"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button1"
            android:layout_toRightOf="@id/ButtonHelp"
            android:background="@drawable/button_key_dark"
            android:text="4"/>

        <Button
            android:id="@+id/Button5"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button2"
            android:layout_toRightOf="@id/Button4"
            android:background="@drawable/button_key_dark"
            android:text="5"/>

        <Button
            android:id="@+id/Button6"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button3"
            android:layout_toRightOf="@id/Button5"
            android:background="@drawable/button_key_dark"
            android:text="6"/>

        <Button
            android:id="@+id/ButtonVolP"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button4"
            android:layout_toLeftOf="@id/Button4"
            android:background="@drawable/button_key_light"
            android:text="V+"/>

        <Button
            android:id="@+id/ButtonVolM"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonVolP"
            android:background="@drawable/button_key_light"
            android:text="V-"/>

        <Button
            android:id="@+id/Button7"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button4"
            android:layout_toRightOf="@id/ButtonVolM"
            android:background="@drawable/button_key_dark"
            android:text="7"/>

        <Button
            android:id="@+id/Button8"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button5"
            android:layout_toRightOf="@id/Button7"
            android:background="@drawable/button_key_dark"
            android:text="8"/>

        <Button
            android:id="@+id/Button9"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button6"
            android:layout_toRightOf="@id/Button8"
            android:background="@drawable/button_key_dark"
            android:text="9"/>

        <Button
            android:id="@+id/ButtonBouP"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button6"
            android:layout_toRightOf="@id/Button9"
            android:background="@drawable/button_key_light"
            android:text="B+"/>

        <Button
            android:id="@+id/ButtonLeftArrow"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button7"
            android:layout_toRightOf="@id/ButtonVolM"
            android:background="@drawable/button_key_dark"
            android:text="&lt;"/>

        <Button
            android:id="@+id/Button0"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button8"
            android:layout_toRightOf="@id/ButtonLeftArrow"
            android:background="@drawable/button_key_dark"
            android:text="0"/>

        <Button
            android:id="@+id/ButtonRightArrow"
            style="@style/RemoteButton.Medium"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/Button9"
            android:layout_toRightOf="@id/Button0"
            android:background="@drawable/button_key_dark"
            android:text=">"/>

        <Button
            android:id="@+id/ButtonBouM"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonBouP"
            android:layout_toRightOf="@id/ButtonRightArrow"
            android:background="@drawable/button_key_light"
            android:text="B-"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/ButtonRed"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:background="@drawable/button_key_red"/>

        <Button
            android:id="@+id/ButtonGreen"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ButtonRed"
            android:background="@drawable/button_key_green"/>

        <Button
            android:id="@+id/ButtonYellow"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ButtonGreen"
            android:background="@drawable/button_key_yellow"/>

        <Button
            android:id="@+id/ButtonBlue"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ButtonYellow"
            android:background="@drawable/button_key_blue"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/ButtonInfo"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:background="@drawable/button_key_dark"
            android:text="Info"/>

        <Button
            android:id="@+id/ButtonInfoSpacer"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonInfo"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/ButtonUp"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonInfoSpacer"
            android:background="@drawable/button_key_light"
            android:src="@drawable/ic_key_up"
            android:text="UP"/>

        <Button
            android:id="@+id/ButtonUpSpacer"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonUp"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/ButtonMenu"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonUpSpacer"
            android:background="@drawable/button_key_dark"
            android:text="Menu"/>

        <ImageButton
            android:id="@+id/ButtonLeft"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonMenu"
            android:layout_toLeftOf="@id/ButtonUp"
            android:background="@drawable/button_key_light"
            android:src="@drawable/ic_key_left"
            android:text="LEFT"/>

        <Button
            android:id="@+id/ButtonOk"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonUp"
            android:layout_toRightOf="@id/ButtonLeft"
            android:background="@drawable/button_key_light"
            android:text="OK"/>

        <ImageButton
            android:id="@+id/ButtonRight"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonMenu"
            android:layout_toRightOf="@id/ButtonOk"
            android:background="@drawable/button_key_light"
            android:src="@drawable/ic_key_right"
            android:text="RIGHT"/>

        <Button
            android:id="@+id/ButtonAudio"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonLeft"
            android:layout_toLeftOf="@id/ButtonLeft"
            android:background="@drawable/button_key_dark"
            android:text="Audio"/>

        <ImageButton
            android:id="@+id/ButtonDown"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonLeft"
            android:layout_toRightOf="@id/ButtonLeft"
            android:background="@drawable/button_key_light"
            android:src="@drawable/ic_key_down"
            android:text="DOWN"/>

        <Button
            android:id="@+id/ButtonPvr"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonRight"
            android:layout_toRightOf="@id/ButtonRight"
            android:background="@drawable/button_key_dark"
            android:text="PVR"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/ButtonMute"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:background="@drawable/button_key_dark"
            android:text="Mute"/>

        <Button
            android:id="@+id/ButtonExit"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/ButtonMute"
            android:background="@drawable/button_key_red"
            android:text="Exit"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/ButtonRwd"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_column="1"
            android:background="@drawable/button_key_dark_oval"
            android:src="@drawable/ic_media_previous_dark"
            android:text="RWD"/>

        <ImageButton
            android:id="@+id/ButtonPlay"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonRwd"
            android:background="@drawable/button_key_dark_oval"
            android:src="@drawable/ic_media_play_dark"
            android:text="PLAY"/>

        <ImageButton
            android:id="@+id/ButtonStop"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonPlay"
            android:background="@drawable/button_key_dark_oval"
            android:src="@drawable/ic_media_stop_dark"
            android:text="STOP"/>

        <ImageButton
            android:id="@+id/ButtonFwd"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_toRightOf="@id/ButtonStop"
            android:background="@drawable/button_key_dark_oval"
            android:src="@drawable/ic_media_next_dark"
            android:text="FWD"/>

        <Button
            android:id="@+id/ButtonTv"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonRwd"
            android:background="@drawable/button_key_dark_oval"
            android:text="TV"/>

        <Button
            android:id="@+id/ButtonRadio"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonRwd"
            android:layout_toRightOf="@id/ButtonTv"
            android:background="@drawable/button_key_dark_oval"
            android:text="RADIO"/>

        <Button
            android:id="@+id/ButtonText"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonRwd"
            android:layout_toRightOf="@id/ButtonRadio"
            android:background="@drawable/button_key_dark_oval"
            android:text="TEXT"/>

        <Button
            android:id="@+id/ButtonRec"
            style="@style/RemoteButton"
            android:layout_width="@dimen/remote_key_width_big"
            android:layout_height="@dimen/remote_key_height"
            android:layout_below="@id/ButtonRwd"
            android:layout_toRightOf="@id/ButtonText"
            android:background="@drawable/button_key_dark_oval"
            android:text="REC"
            android:textColor="#F00"/>

    </RelativeLayout>
</merge>