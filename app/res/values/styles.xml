<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardText">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="CardTitle" parent="@style/CardText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/title_color</item>
    </style>

    <style name="CardTextSmall" parent="@style/CardText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="CardStyle">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:background">?attr/cardBackground</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardStyleMultiEpg">
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">?attr/cardBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/multiepg_row_height</item>
    </style>

    <style name="CardListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">6dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="CardListView.Light" parent="CardListView"/>

    <style name="SimpleHeader" parent="@android:style/TextAppearance.Small">

        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#888</item>
        <item name="android:background">@drawable/simple_heading_line</item>
    </style>

    <style name="ButtonPanel"/>

    <style name="NavButtonBar" parent="@android:style/ButtonBar"/>

    <style name="NavButtonBarButton">
        <item name="android:background">?attr/listItemBackground</item>
    </style>

    <style name="RemoteButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="RemoteButton.Big" parent="RemoteButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="RemoteButton.Medium" parent="RemoteButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="MediumHeader" parent="SimpleHeader">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="buttonBarStyle"/>

    <style name="buttonBarButtonStyle"/>

    <style name="buttonBarButtonPositiveStyle"/>

    <style name="buttonBarButtonNegativeStyle"/>
</resources>
