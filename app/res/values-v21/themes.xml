<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DreamDroid" parent="Base.Theme.DreamDroid">
        <item name="ic_btn_clock">@drawable/ic_menu_clock_holo_dark</item>
        <item name="ic_btn_close">@drawable/ic_menu_close_holo_dark</item>
        <item name="ic_btn_movie">@drawable/ic_menu_movie_holo_dark</item>
        <item name="ic_btn_save">@drawable/ic_menu_save_holo_dark</item>
        <item name="ic_btn_send">@drawable/ic_menu_send_holo_dark</item>
        <item name="ic_btn_timer">@drawable/ic_menu_timer_single_holo_dark</item>
    </style>

    <style name="Theme.DreamDroid.Light" parent="Base.Theme.DreamDroid.Light"></style>

    <style name="Theme.DreamDroid.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/material_blue_500</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Theme.DreamDroid.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/material_blue_600</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
</resources>