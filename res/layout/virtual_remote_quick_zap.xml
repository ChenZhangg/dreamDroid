<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:id="@+id/ScrollView01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:gravity="right">


		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingTop="5dp"
			android:paddingBottom="5dp">

			<Button
				android:id="@+id/ButtonHelp"
				style="@style/RemoteButton"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="30dp"
				android:background="@drawable/button_key_dark"
				android:text="Help"/>

			<Button
				android:id="@+id/ButtonVolP"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="@dimen/remote_key_height"
				android:layout_toRightOf="@id/ButtonHelp"
				android:background="@drawable/button_key_light"
				android:text="V+"/>

			<Button
				android:id="@+id/ButtonVolM"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="@dimen/remote_key_height"
				android:layout_below="@id/ButtonVolP"
				android:layout_toRightOf="@id/ButtonHelp"
				android:padding="15dp"
				android:background="@drawable/button_key_light"
				android:text="V-"/>

			<Button
				android:id="@+id/ButtonMute"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="40dp"
				android:layout_toRightOf="@id/ButtonVolM"
				android:background="@drawable/button_key_dark"
				android:text="Mute"/>

			<Button
				android:id="@+id/ButtonExit"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="40dp"
				android:layout_below="@id/ButtonMute"
				android:layout_toRightOf="@id/ButtonVolM"
				android:layout_alignBaseline="@id/ButtonVolM"
				android:background="@drawable/button_key_red"
				android:text="Exit"/>

			<Button
				android:id="@+id/ButtonBouP"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="@dimen/remote_key_height"
				android:layout_toRightOf="@id/ButtonMute"
				android:background="@drawable/button_key_light"
				android:text="B+"/>

			<Button
				android:id="@+id/ButtonPower"
				style="@style/RemoteButton"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="30dp"
				android:layout_toRightOf="@id/ButtonBouP"
				android:background="@drawable/button_key_red"
				android:text="PWR"/>

			<Button
				android:id="@+id/ButtonBouM"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width"
				android:layout_height="@dimen/remote_key_height"
				android:layout_below="@id/ButtonBouP"
				android:layout_toRightOf="@id/ButtonMute"
				android:background="@drawable/button_key_light"
				android:text="B-"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="10dp"
			android:paddingBottom="10dp">

			<Button
				android:id="@+id/ButtonInfo"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:background="@drawable/button_key_dark"
				android:text="Info"/>

			<Button
				android:id="@+id/ButtonUp"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_toRightOf="@id/ButtonInfo"
				android:background="@drawable/button_key_light"
				android:text="UP"/>

			<Button
				android:id="@+id/ButtonMenu"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_toRightOf="@id/ButtonUp"
				android:background="@drawable/button_key_dark"
				android:text="Menu"/>

			<Button
				android:id="@+id/ButtonLeft"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonMenu"
				android:layout_toLeftOf="@id/ButtonUp"
				android:background="@drawable/button_key_light"
				android:text="LEFT"/>

			<Button
				android:id="@+id/ButtonOk"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonUp"
				android:layout_toRightOf="@id/ButtonLeft"
				android:background="@drawable/button_key_light"
				android:text="OK"/>

			<Button
				android:id="@+id/ButtonRight"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonMenu"
				android:layout_toRightOf="@id/ButtonOk"
				android:background="@drawable/button_key_light"
				android:text="RIGHT"/>

			<Button
				android:id="@+id/ButtonAudio"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonLeft"
				android:background="@drawable/button_key_dark"
				android:text="Audio"/>

			<Button
				android:id="@+id/ButtonDown"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonLeft"
				android:layout_toRightOf="@id/ButtonLeft"
				android:background="@drawable/button_key_light"
				android:text="DOWN"/>

			<Button
				android:id="@+id/ButtonVideo"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="@dimen/remote_key_height_big"
				android:layout_below="@id/ButtonRight"
				android:layout_toRightOf="@id/ButtonDown"
				android:background="@drawable/button_key_dark"
				android:text="Video"/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingTop="5dp">

			<Button
				android:id="@+id/ButtonRed"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="30dp"
				android:background="@drawable/button_key_red"/>

			<Button
				android:id="@+id/ButtonGreen"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="30dp"
				android:layout_toRightOf="@id/ButtonRed"
				android:background="@drawable/button_key_green"/>

			<Button
				android:id="@+id/ButtonYellow"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="30dp"
				android:layout_toRightOf="@id/ButtonGreen"
				android:background="@drawable/button_key_yellow"/>

			<Button
				android:id="@+id/ButtonBlue"
				style="@style/RemoteButton.Big"
				android:layout_width="@dimen/remote_key_width_big"
				android:layout_height="30dp"
				android:layout_toRightOf="@id/ButtonYellow"
				android:background="@drawable/button_key_blue"/>

		</RelativeLayout>
	</LinearLayout>
</ScrollView>